<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtduckscreen"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Ducks"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnduckscreen"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:text="Return"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="383dp"
        android:layout_height="444dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtduckscreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgyellowbilledduck"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/yellowbilledduck" />

            <ImageView
                android:id="@+id/imgwhitewduck"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/whitefacedwhistlingduck" />

            <ImageView
                android:id="@+id/imgknobbilledduck"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/knobbilledDuck" />

            <ImageView
                android:id="@+id/imgwhitebackedduck"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/WhiteBackedDuck" />

            <ImageView
                android:id="@+id/imgsashellduck"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/SouthAfricanShelduck" />

            <ImageView
                android:id="@+id/imgredeyedpochard"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/RedeyedSouthernPochard" />

            <ImageView
                android:id="@+id/imgmaccoaduck"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/MaccoaDuck" />

            <ImageView
                android:id="@+id/imgfulvousduck"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/FulvousWhistlingduck" />

            <ImageView
                android:id="@+id/imgcapeshoveler"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/Capeshoveler" />

            <ImageView
                android:id="@+id/imgblackduck"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/Blackduck"
                tools:layout_editor_absoluteY="53dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>

