<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnreturnPart"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:text="Return"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtpartridge"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Partridge"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="386dp"
        android:layout_height="444dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnreturnPart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgshellys"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/partridgeshellys" />

            <ImageView
                android:id="@+id/imgredwing"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/partridgeredwing" />

            <ImageView
                android:id="@+id/imgoriver"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/partridgeorangeriver" />

            <ImageView
                android:id="@+id/imggreywing"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/partridgegreywing" />

            <ImageView
                android:id="@+id/imgcrested"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/partridgecrested" />

            <ImageView
                android:id="@+id/imgcoqui"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:srcCompat="@drawable/partridgecoqui" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>