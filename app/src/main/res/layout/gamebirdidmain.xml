<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtBirdIDHeader"
        android:layout_width="221dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Game Bird ID in the field"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGBHome"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:text="Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="388dp"
        android:layout_height="448dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBirdIDHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgnoOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/notallowedtoshoot1" />

            <ImageView
                android:id="@+id/imgnoTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/notallowedtoshoot2" />

            <Button
                android:id="@+id/btnDucks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ducks" />

            <Button
                android:id="@+id/btnQuail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quail" />

            <Button
                android:id="@+id/btnGeese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Geese" />

            <Button
                android:id="@+id/btnFowl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guiniefowl" />

            <Button
                android:id="@+id/btnfranc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Francolin" />

            <Button
                android:id="@+id/btnpartridge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Partridge" />

            <Button
                android:id="@+id/btnPigeons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pigeons" />

            <Button
                android:id="@+id/btnTeal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teal" />

            <Button
                android:id="@+id/btnsnipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Snipe" />

            <Button
                android:id="@+id/btnGrouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grouse" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>