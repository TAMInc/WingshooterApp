<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BirdIDFV">

    <ViewFlipper
        android:id="@+id/FlipBirrds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="70dp"
        >

        <ScrollView
            android:id="@+id/ScrollVIDMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/FlipBirrds"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgnoOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/notallowedtoshoot1" />

                <ImageView
                    android:id="@+id/imgnoTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/notallowedtoshoot2" />


                <Button

                    android:id="@+id/btnScrollDuck"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:text="Ducks"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"/>


                <Button

                    android:id="@+id/btnScrollQuial"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_light"
                    android:text="Quail"
                    android:textColor="@android:color/white" />

                <Button

                    android:id="@+id/btnScrollGeese"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:text="Geese"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"/>

                <Button

                    android:id="@+id/btnScrollGuinie"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:text="Guiniefowl"
                    android:background="@android:color/holo_blue_light"
                    android:textColor="@android:color/white"/>

                <Button

                    android:id="@+id/btnScrollFranc"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:text="Francolin"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"/>

                <Button

                    android:id="@+id/btnScrollPartridge"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:text="Partridge"
                    android:background="@android:color/holo_blue_light"
                    android:textColor="@android:color/white"/>

                <Button

                    android:id="@+id/btnScrollPigeons"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:text="Pigeons"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"/>

                <Button

                    android:id="@+id/btnScrollTeal"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:text="Teal"
                    android:background="@android:color/holo_blue_light"
                    android:textColor="@android:color/white"/>

                <Button

                    android:id="@+id/btnScrollSnipe"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:text="Snipe"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"/>

                <Button

                    android:id="@+id/btnScrollGrouse"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:text="Grouse"
                    android:background="@android:color/holo_blue_light"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </ScrollView>

        <ScrollView
            android:id="@+id/ScrollVIDduck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgyellowbilledduck"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/yellowbilledduck"
                    />

                <ImageView
                    android:id="@+id/imgwhitewduck"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/whitefacedwhistlingduck"
                    />

                <ImageView
                    android:id="@+id/imgknobbilledduck"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/knobbilledduck"
                    />

                <ImageView
                    android:id="@+id/imgwhitebackedduck"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:padding="1dp"
                    app:srcCompat="@drawable/whitebackedduck"
                    />

                <ImageView
                    android:id="@+id/imgsashellduck"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:padding="1dp"
                    app:srcCompat="@drawable/southafricanshelduck"
                    />

                <ImageView
                    android:id="@+id/imgredeyedpochard"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/redeyedsouthernpochard"
                   />

                <ImageView
                    android:id="@+id/imgmaccoaduck"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/maccoaduck"
                    />

                <ImageView
                    android:id="@+id/imgfulvousduck"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/fulvouswhistlingduck"
                    />

                <ImageView
                    android:id="@+id/imgcapeshoveler"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/capeshoveler"
                    />

                <ImageView
                    android:id="@+id/imgblackduck"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/blackduck"
                    tools:layout_editor_absoluteY="53dp"
                    />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/ScrollVIDFranc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgCapeFrancolin"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"

                        app:srcCompat="@drawable/francolincape" />

                    <ImageView
                        android:id="@+id/imgNatalFrancolin"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"

                        app:srcCompat="@drawable/francolinnatal" />

                    <ImageView
                        android:id="@+id/imgRedBilledFrancolin"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        app:srcCompat="@drawable/francolinredbilled" />

                    <ImageView
                        android:id="@+id/imgRedNeckedFrancolin"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"

                        app:srcCompat="@drawable/francolinrednecked" />

                    <ImageView
                        android:id="@+id/imgSwainsonsFrancolin"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        app:srcCompat="@drawable/francolinswainsons" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/ScrollVIDGeese"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgEgyptianGoose"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/gooseegyptian"
                    />

                <ImageView
                    android:id="@+id/imgSpurwingGoose"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/goosespurwinged"
                    />

                <ImageView
                    android:id="@+id/imgPygmyGoose"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/goosepygmy"
                    />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/ScrollVIDGrouse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgyellowthroated"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/sandgrouseyellowthroated"
                    />

                <ImageView
                    android:id="@+id/imgnamaqua"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/sandgrousenamaqua"
                    />

                <ImageView
                    android:id="@+id/imgdblbanded"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/sandgrousedoublebanded"
                    />

                <ImageView
                    android:id="@+id/imgburchall"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/sandgrouseburchells"
                    />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/ScrollVIDGuine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgCrestedGuinefowl"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/guiniefowlcrested"
                    />

                <ImageView
                    android:id="@+id/imgCrownedGuinefowl"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/guiniefowlcrowned"
                    />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/ScrollVIDPartridge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgshellys"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/partridgeshellys"
                    />

                <ImageView
                    android:id="@+id/imgredwing"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/partridgeredwing"
                    />

                <ImageView
                    android:id="@+id/imgoriver"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/partridgeorangeriver"
                    />

                <ImageView
                    android:id="@+id/imggreywing"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/partridgegreywing"
                    />

                <ImageView
                    android:id="@+id/imgcrested"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/partridgecrested"
                    />

                <ImageView
                    android:id="@+id/imgcoqui"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/partridgecoqui"
                    />

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/ScrollVIDPigeons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgRedEyedDove"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        app:srcCompat="@drawable/pigeon_dove_redeyed"
                        />

                    <ImageView
                        android:id="@+id/imgFeralPigeon"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        app:srcCompat="@drawable/pigeonferal"
                        />

                    <ImageView
                        android:id="@+id/imgRameronPigeon"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        app:srcCompat="@drawable/pigeonrameron"
                        />

                    <ImageView
                        android:id="@+id/imgRockPigeon"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        app:srcCompat="@drawable/pigeonrock"
                        />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/ScrollVIDQuail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgharlequin"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/quailharlequin"
                    />

                <ImageView
                    android:id="@+id/imgafrican"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/quailafrican"
                    />
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/ImgVIDSnipe"
            android:layout_width="352dp"
            android:layout_height="421dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ethiopiansnipe"
            />

        <ScrollView
            android:id="@+id/ScrollVIDTeal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgCapeTeal"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/tealcape"
                    />

                <ImageView
                    android:id="@+id/imgHottentotTeal"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/tealhottenton"
                    />

                <ImageView
                    android:id="@+id/imgRedBilledTeal"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:srcCompat="@drawable/tealredbilled"
                    />
            </LinearLayout>
        </ScrollView>
    </ViewFlipper>

    <Button
        android:id="@+id/btnBHome"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="11dp"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:text="Home" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="11dp"
        android:onClick="nextView"
        android:text="Next"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="11dp"
        android:onClick="startView"
        android:text="GAME BIRD ID"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"/>

</RelativeLayout>